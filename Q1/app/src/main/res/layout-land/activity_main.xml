<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
     // Text area for *****
    <TextView
        android:layout_width="315dp"
        android:layout_height="45dp"
        android:layout_marginTop="13dp"
        android:text="*****"
     />

    <EditText
        android:id="@+id/editText"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"

        android:hint="Enter Text Here"
        android:inputType="textPassword" />  // width of field = 315
                                             // from top of activity margin set to 67
                                             // hint means the faded text inside the field

    <Button
        android:id="@+id/button"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:text="CLEAR" />
                                      // again set margin from top to 128dp
                                      // width of a button to 176 dp

    <Button
        android:id="@+id/button2"
        android:layout_width="263dp"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12dp"
        android:text="ADD" />

                              // error occurs due to the compatibility issue it is available in API 17 or forward

    <Button
        android:id="@+id/button3"
        android:layout_width="176dp"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="205dp"
        android:text="Open Cal" />

</RelativeLayout>